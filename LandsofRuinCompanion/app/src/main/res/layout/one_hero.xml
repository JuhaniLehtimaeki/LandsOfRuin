<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:padding="8dp">

    <com.landsofruin.companion.view.ClipedCommandPanelFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/command_panel_background"
        android:foreground="@drawable/command_panel_line">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/needs_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_horizontal"
            android:text="New version available, please respawn!"
            android:textSize="18sp"
            android:visibility="gone" />

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/spawned_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_horizontal"
            android:text="Spawned"
            android:textSize="24sp"
            android:visibility="gone" />


    </com.landsofruin.companion.view.ClipedCommandPanelFrameLayout>


    <com.landsofruin.companion.view.ClipedCommandPanelFrameLayout
        android:id="@+id/unlock_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66ffffff"
        android:visibility="gone">

        <com.landsofruin.companion.view.MechaFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_horizontal"
            android:text="Unlock for your tribe now"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />


    </com.landsofruin.companion.view.ClipedCommandPanelFrameLayout>


    <com.landsofruin.companion.view.ClipedCommandPanelFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clickable_transparent_background"
        android:duplicateParentState="true" />


</FrameLayout>