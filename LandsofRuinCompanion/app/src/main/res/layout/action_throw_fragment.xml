<?xml version="1.0" encoding="utf-8"?>
<com.landsofruin.companion.view.ClipedCommandPanelFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/command_panel_background"
    android:clickable="true"
    android:foreground="@drawable/command_panel_line">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_grid"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFFFF"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/grenade_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Step 1 - Place a token on the battlefield withing the range" />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 2 - Drag the indicator below approximately to the same location as the token on the battlefield." />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 3 - Confirm by pressing the button below." />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/bazooka_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Step 1 - Place a token anywhere on the battlefield with Line of Sight from the shooter" />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 2 - Drag the indicator below approximately to the same location as the token on the battlefield." />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 3 - Confirm by pressing the button below." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/artillery_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Step 1 - Secretly decide which section to call the artillery stricke to." />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 2 - Drag the indicator below to the same map section." />

                <com.landsofruin.companion.view.MechaFontTextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Step 3 - Confirm by pressing the button below." />
            </LinearLayout>

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/range"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp" />

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/evolution"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"/>

            <ImageView
                android:id="@+id/drag_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:clickable="true"
                android:src="@drawable/throwable_drag_shadow" />

            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:id="@+id/done_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/solid_yellow_button_background"
                android:enabled="false"
                app:corner2="24dp"
                app:corner3="24dp">


                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="32sp" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>

            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/solid_blue_button_background"
                app:corner1="24dp"
                app:corner4="24dp">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="32sp" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>
        </LinearLayout>

    </ScrollView>
</com.landsofruin.companion.view.ClipedCommandPanelFrameLayout>