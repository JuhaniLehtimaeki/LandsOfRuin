            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/tutorial_text_color"
            android:text="@string/tutorial_weapon_ba"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tutorial_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="short"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/tutorial_text_color"
            android:text="@string/tutorial_weapon_short"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tutorial_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="mid"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/tutorial_text_color"
            android:text="@string/tutorial_weapon_mid"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tutorial_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="long"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/tutorial_text_color"
            android:text="@string/tutorial_weapon_long"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
