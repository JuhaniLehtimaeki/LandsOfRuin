<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/toolbar_background"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/save_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/clickable_transparent_background"
            android:src="@drawable/back_arrow" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="Learn the Game"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/battle_art" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/battle_overlay" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.landsofruin.companion.view.MechaFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="16dp"
                            android:ellipsize="end"
                            android:text="Tutorials"
                            android:textAllCaps="true"
                            android:textColor="@color/text_light_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#037790" />


                        <com.landsofruin.companion.view.MechaFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Coming soon!"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:layout_margin="8dp"
                            android:textSize="28sp" />



                        <com.landsofruin.companion.view.CornerCuttingFrameLayout
                            android:id="@+id/tutorial_1"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/solid_blue_button_background"
                            app:corner1="16dp"
                            app:corner2="16dp"
                            app:corner3="16dp"
                            app:corner4="16dp">

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Tutorial 1, ranged attack"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="28sp" />

                        </com.landsofruin.companion.view.CornerCuttingFrameLayout>


                        <com.landsofruin.companion.view.CornerCuttingFrameLayout
                            android:id="@+id/tutorial_2"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/solid_blue_button_background"
                            app:corner1="16dp"
                            app:corner2="16dp"
                            app:corner3="16dp"
                            app:corner4="16dp">

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Tutorial 2, close combat"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="28sp" />

                        </com.landsofruin.companion.view.CornerCuttingFrameLayout>


                        <com.landsofruin.companion.view.CornerCuttingFrameLayout
                            android:id="@+id/tutorial_3"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/solid_blue_button_background"
                            app:corner1="16dp"
                            app:corner2="16dp"
                            app:corner3="16dp"
                            app:corner4="16dp">

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Tutorial 3, rotters"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="28sp" />

                        </com.landsofruin.companion.view.CornerCuttingFrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.landsofruin.companion.view.MechaFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="16dp"
                            android:ellipsize="end"
                            android:text="Videos"
                            android:textAllCaps="true"
                            android:textColor="@color/text_light_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#037790" />


                        <LinearLayout
                            android:id="@+id/vid_link_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/vid_thumb_introduction" />

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:drawablePadding="8dp"
                                android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                                android:ellipsize="end"
                                android:text="Part 1, Introduction"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/vid_link_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/vid_thumb_gameplay_introduction" />

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:drawablePadding="8dp"
                                android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                                android:ellipsize="end"
                                android:text="Part 2, Gameplay Introduction"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vid_link_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/vid_thumb_gameplay_basics" />

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:drawablePadding="8dp"
                                android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                                android:ellipsize="end"
                                android:text="Part 3, Gameplay basics"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vid_link_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/vid_thumb_game_setup" />

                            <com.landsofruin.companion.view.MechaFontTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:drawablePadding="8dp"
                                android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                                android:ellipsize="end"
                                android:text="Part 4, Game setup"
                                android:textAllCaps="true"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <com.landsofruin.companion.view.MechaFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="16dp"
                            android:ellipsize="end"
                            android:text="Reading"
                            android:textAllCaps="true"
                            android:textColor="@color/text_light_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#037790" />


                        <com.landsofruin.companion.view.MechaFontTextView
                            android:id="@+id/in_app_tutorials"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:drawablePadding="8dp"
                            android:ellipsize="end"
                            android:padding="16dp"
                            android:text="Read in-app tutorials"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="32sp" />


                        <com.landsofruin.companion.view.MechaFontTextView
                            android:id="@+id/getting_started_web"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                            android:ellipsize="end"
                            android:padding="16dp"
                            android:text="Lands of Ruin website, getting started"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="32sp" />

                        <com.landsofruin.companion.view.MechaFontTextView
                            android:id="@+id/rulebook_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/clickable_transparent_background"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/ic_open_in_new_white_48dp"
                            android:ellipsize="end"
                            android:padding="16dp"
                            android:text="Download Lands of Ruin Rulebook"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="32sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>