<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="550dp">


                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:adjustViewBounds="true" />

                    <com.landsofruin.companion.view.CornerCuttingFrameLayout
                        android:id="@+id/change_picture_button"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="8dp"
                        android:background="@drawable/solid_blue_button_background"
                        android:visibility="gone"
                        app:corner1="16dp"
                        app:corner2="16dp"
                        app:corner3="16dp"
                        app:corner4="16dp">

                        <com.landsofruin.companion.view.MechaFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Change picture"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="28sp" />

                    </com.landsofruin.companion.view.CornerCuttingFrameLayout>
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.landsofruin.companion.view.MechaFontTextView
                        android:id="@+id/character_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="16dp"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                    <com.landsofruin.companion.view.CornerCuttingFrameLayout
                        android:id="@+id/spawn_unlock_button"
                        android:layout_width="300dp"
                        android:layout_height="75dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="8dp"
                        android:background="@drawable/solid_blue_button_background"
                        app:corner1="16dp"
                        app:corner2="16dp"
                        app:corner3="16dp"
                        app:corner4="16dp">

                        <com.landsofruin.companion.view.MechaFontTextView
                            android:id="@+id/spawn_unlock_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="..."
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="28sp" />

                    </com.landsofruin.companion.view.CornerCuttingFrameLayout>
                </LinearLayout>


                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:text="Followers"
                    android:textAllCaps="true"
                    android:textColor="@color/text_light_blue"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="8dp"
                    android:background="#037790"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/squads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="118dp"
                    android:orientation="vertical" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:text="Weapons"
                    android:textAllCaps="true"
                    android:textColor="@color/text_light_blue"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="8dp"
                    android:background="#037790" />

                <LinearLayout
                    android:id="@+id/weapons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:text="Gear"
                    android:textAllCaps="true"
                    android:textColor="@color/text_light_blue"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="8dp"
                    android:background="#037790" />

                <LinearLayout
                    android:id="@+id/gear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:text="Skills"
                    android:textAllCaps="true"
                    android:textColor="@color/text_light_blue"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="8dp"
                    android:background="#037790" />

                <LinearLayout
                    android:id="@+id/skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>