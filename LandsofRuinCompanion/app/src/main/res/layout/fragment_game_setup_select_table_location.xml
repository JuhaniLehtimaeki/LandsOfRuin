<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/toolbar_background"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back_button"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/clickable_transparent_background"
                android:src="@drawable/back_arrow" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/info_text"
                    style="@style/setup_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:text="Table side selection" />


                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/scenario_validation_text"
                    style="@style/setup_toolbar_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:text="" />


            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:id="@+id/done_button"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/solid_yellow_button_background"
                android:enabled="false"
                app:corner2="26dp"
                app:corner3="26dp">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="24dp"
                    android:text="Ready"
                    android:textColor="#FFFFFFFF"
                    android:textSize="24sp" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>

        </LinearLayout>

        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/toolbar_background"
            android:paddingBottom="8dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="8dp"
            app:corner3="10dp"
            app:corner4="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="horizontal">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/scenario_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Scenario"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/separator_arrow" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/map_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Table"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/separator_arrow" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/team_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Team"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/separator_arrow" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Overview"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/separator_arrow" />


                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/start_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Start game"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

            </LinearLayout>
        </com.landsofruin.companion.view.CornerCuttingFrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:minHeight="800dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <FrameLayout
                            android:id="@+id/players_north_container"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/clickable_transparent_background"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <LinearLayout
                                android:id="@+id/players_north_container_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#3503778f"
                                android:gravity="center_horizontal"
                                android:orientation="vertical" />


                        </FrameLayout>


                        <RelativeLayout
                            android:id="@+id/main_container"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="8dp"
                            android:layout_weight="1">


                            <ImageView
                                android:id="@+id/map_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/map_container"
                                android:layout_alignLeft="@+id/map_container"
                                android:layout_alignRight="@+id/map_container"
                                android:layout_alignTop="@+id/map_container"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/map_background"
                                android:paddingBottom="16dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="16dp"
                                android:scaleType="fitXY" />


                            <FrameLayout
                                android:id="@+id/map_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <com.landsofruin.companion.map.MapView
                                    android:id="@+id/map"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                            </FrameLayout>


                        </RelativeLayout>


                        <FrameLayout
                            android:id="@+id/players_south_container"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/clickable_transparent_background"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <LinearLayout
                                android:id="@+id/players_south_container_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#3503778f"
                                android:gravity="center_horizontal"
                                android:orientation="vertical" />


                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="128dp"
                        android:layout_marginTop="128dp"
                        android:orientation="vertical">


                        <com.landsofruin.companion.view.MechaFontTextView
                            android:id="@+id/table_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="16dp"
                            android:gravity="center_horizontal"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFFFF"
                            android:textSize="24sp" />


                        <TextView
                            android:id="@+id/provider_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="16dp"
                            android:gravity="center_horizontal"
                            android:textColor="#FFFFFFFF"
                            android:textSize="24sp" />


                        <ImageView
                            android:id="@+id/provider_icon"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="16dp"
                            android:gravity="center_horizontal"
                            android:scaleType="fitCenter" />


                        <TextView
                            android:id="@+id/provider_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="16dp"
                            android:background="@drawable/clickable_transparent_background"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:textColor="#FF2196f3"
                            android:textSize="24sp" />
                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


        </FrameLayout>
    </LinearLayout>


</FrameLayout>