<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/attack_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:background="@drawable/rotter_icon_background"
        android:padding="3dp"
        android:scaleType="centerInside" />

    <com.landsofruin.companion.view.MechaFontTextView
        android:id="@+id/hit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp" />


    <com.landsofruin.companion.view.CornerCuttingFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#350e8799"
        app:corner2="16dp"
        app:corner4="16dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:id="@+id/add_hit_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_margin="8dp"
                android:background="@drawable/solid_blue_button_background"
                android:padding="8dp"
                app:corner1="8dp"
                app:corner2="8dp"
                app:corner3="8dp"
                app:corner4="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plus_button" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/hit_count"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFFFF"
                android:textSize="32sp" />

            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:id="@+id/remove_hit_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|top"
                android:layout_margin="8dp"
                android:background="@drawable/solid_blue_button_background"
                android:padding="8dp"
                app:corner1="8dp"
                app:corner2="8dp"
                app:corner3="8dp"
                app:corner4="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/minus_button" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>


        </LinearLayout>
    </com.landsofruin.companion.view.CornerCuttingFrameLayout>

</LinearLayout>