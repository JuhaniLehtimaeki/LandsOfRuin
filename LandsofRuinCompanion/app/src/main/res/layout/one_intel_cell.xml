<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="1dp"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:orientation="horizontal"
    android:background="#FFcccccc"
    >


    <View
        android:id="@+id/threat_level_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff0000"
        />


    <com.landsofruin.companion.fragment.IntelCellZombieNubersIndicator
        android:id="@+id/count_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/zombie_numbers"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_gravity="center"
        android:textColor="#ffffffff"/>


    <View
        android:id="@+id/pull_north"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top"/>


    <View
        android:id="@+id/pull_south"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"/>


    <View
        android:id="@+id/pull_west"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"/>


    <View
        android:id="@+id/pull_east"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"/>
</FrameLayout>