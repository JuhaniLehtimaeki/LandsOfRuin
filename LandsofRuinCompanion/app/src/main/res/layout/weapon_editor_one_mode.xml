<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/bullets_per_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bullets per action"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/max_targets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Max targets"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/noise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Noise"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/dice_light_infantry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Power light infantry"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/dice_heavy_infantry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Power heavy infantry"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/dice_light_armoured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Power light armoured"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/dice_heavy_armoured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Power heavy armoured"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/modifier_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modifier short"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/modifier_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modifier mid"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/modifier_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modifier long"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/modifier_deployed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modifier Deployed"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/available_for_squads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Squad Mode" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="40dp"
        android:background="#037790" />

</LinearLayout>