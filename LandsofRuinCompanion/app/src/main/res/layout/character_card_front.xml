<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_horizontal">

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="207dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="207dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card_character_image_overlay" />


    <com.landsofruin.companion.view.MechaFontTextView
        android:id="@+id/unresolved_hits"
        style="@style/unresolved_hits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="213.5dp"
        android:layout_marginTop="3.5dp"
        android:background="@drawable/card_hit_blue"
        android:paddingLeft="37dp"
        android:paddingTop="13dp"
        android:textSize="14sp"
        android:textStyle="bold" />


    <com.landsofruin.companion.view.MechaFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="6dp"
        android:text="Hits"
        android:textColor="#FF00202d"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3.5dp"
            android:src="@drawable/card_header" />

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/character_name"
            style="@style/character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="277dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2" />


        <ImageView
            android:id="@+id/character_role_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="9dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/character_in_command_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_star_gold"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/character_second_in_command_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_star_silver"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/character_dead"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/effect_icon_dead"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/character_unconsious"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/effect_icon_unconscious"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/character_pinned"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/effect_icon_pinned"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/weapons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:gravity="left"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/suppression_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="3.5dp"
            android:layout_marginTop="48.5dp"
            android:background="@drawable/suppression_bg"
            android:orientation="vertical" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/suppression"
            style="@style/suppression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="3.5dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="0dp"
            android:paddingTop="12dp"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:text="%"
            android:textColor="#FF00202d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="210dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_actions_bg">

                <LinearLayout
                    android:id="@+id/assigned_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp" />


                <com.landsofruin.companion.view.MechaFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="3dp"
                    android:text="Actions"
                    android:textColor="#FF00202d"
                    android:textSize="10dp" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/movement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16dp" />

            </FrameLayout>


            <LinearLayout
                android:id="@+id/minions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff037790"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/minion_role_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/minions_title"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp" />

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/minions_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/wounded_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="220dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="128dp"
                android:src="@drawable/card_wound_shadow" />


            <ImageView
                android:id="@+id/not_wounded_indicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="17dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/not_wound_indicator_1" />

            <ImageView
                android:id="@+id/wounded_indicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="17dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/wound_indicator_1" />


            <ImageView
                android:id="@+id/not_wounded_indicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/not_wound_indicator_2" />


            <ImageView
                android:id="@+id/wounded_indicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/wound_indicator_2" />


            <ImageView
                android:id="@+id/not_wounded_indicator_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="34dp"
                android:layout_marginRight="33dp"
                android:src="@drawable/not_wound_indicator_3" />

            <ImageView
                android:id="@+id/wounded_indicator_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="34dp"
                android:layout_marginRight="33dp"
                android:src="@drawable/wound_indicator_3" />


            <ImageView
                android:id="@+id/not_wounded_indicator_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="33dp"
                android:src="@drawable/not_wound_indicator_4" />


            <ImageView
                android:id="@+id/wounded_indicator_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="33dp"
                android:src="@drawable/wound_indicator_4" />


            <ImageView
                android:id="@+id/not_wounded_indicator_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="37dp"
                android:src="@drawable/not_wound_indicator_5" />


            <ImageView
                android:id="@+id/wounded_indicator_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="37dp"
                android:src="@drawable/wound_indicator_5" />


            <ImageView
                android:id="@+id/not_wounded_indicator_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="101dp"
                android:src="@drawable/not_wound_indicator_6" />


            <ImageView
                android:id="@+id/wounded_indicator_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="101dp"
                android:src="@drawable/wound_indicator_6" />


        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginLeft="213dp"
            android:layout_marginRight="3.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/card_effect_bg" />

        <LinearLayout
            android:id="@+id/effect_icon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="214dp"
            android:text="Effects"
            android:textColor="#FF00202d"
            android:textSize="10dp" />

        <FrameLayout

            android:id="@+id/card_attack_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="155dp"
            android:layout_marginLeft="213.5dp">

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="7dp"
                android:textColor="#FF6fd6ff"
                android:textSize="14sp"
                android:textStyle="bold" />


        </FrameLayout>


        <FrameLayout
            android:id="@+id/card_defence_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="213.5dp">

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/defence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="7dp"
                android:textColor="#FF6fd6ff"
                android:textSize="14sp"
                android:textStyle="bold" />


        </FrameLayout>


        <LinearLayout

            android:id="@+id/non_shooting_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">


        </LinearLayout>


        <ImageButton
            android:id="@+id/flip_front_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#00000000"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            android:paddingTop="16dp"
            android:src="@drawable/flip_map_button" />


    </FrameLayout>


    <com.landsofruin.companion.view.MechaFontTextView
        android:id="@+id/gear_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="47dp"
        android:drawableLeft="@drawable/card_coin"
        android:drawablePadding="2dp"
        android:textColor="@color/light_blue"
        android:textSize="8dp" />
</FrameLayout>
