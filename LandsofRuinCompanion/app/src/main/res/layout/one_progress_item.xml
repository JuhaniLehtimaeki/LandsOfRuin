<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="64dp"
    android:orientation="vertical">


    <com.landsofruin.companion.view.CornerCuttingFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="#350e8799"
        android:paddingBottom="4dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="4dp"
        app:corner2="8dp"
        app:corner4="8dp">

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFda7a04"
            android:textSize="32sp" />

    </com.landsofruin.companion.view.CornerCuttingFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="#274359"
            app:corner1="32dp"
            app:corner3="32dp" />


        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="#1B2E3E"
            app:corner1="32dp"
            app:corner3="32dp" />


        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:id="@+id/progress_bar_orange"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_margin="2dp"
            android:background="#FF7E00"
            android:transformPivotX="0dp"
            app:corner1="32dp"
            app:corner3="32dp" />


    </FrameLayout>
</LinearLayout>

