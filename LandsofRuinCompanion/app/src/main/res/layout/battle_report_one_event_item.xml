<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/phase_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/phase_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textColor="@color/text_light_blue"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:background="#037790" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/assign_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/assign_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/perform_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <TextView
            android:id="@+id/perform_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>



</FrameLayout>