<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:id="@+id/mode_name_container"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/solid_yellow_button_background"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            app:corner1="8dp"
            app:corner2="8dp"
            app:corner3="8dp"
            app:corner4="8dp">

            <com.landsofruin.companion.view.MechaFontTextView
                android:id="@+id/mode_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="false"
                android:textAllCaps="true"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />
        </com.landsofruin.companion.view.CornerCuttingFrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:layout_width="@dimen/shooting_ui_indicator_size"
                android:layout_height="@dimen/shooting_ui_indicator_size"
                android:layout_gravity="center"
                app:corner1="@dimen/shooting_ui_indicator_corner_size"
                app:corner2="@dimen/shooting_ui_indicator_corner_size"
                app:corner3="@dimen/shooting_ui_indicator_corner_size"
                app:corner4="@dimen/shooting_ui_indicator_corner_size">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/short_range"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/shooting_ui_info_textsize" />


            </com.landsofruin.companion.view.CornerCuttingFrameLayout>
        </FrameLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/shooting_ui_grid" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:layout_width="@dimen/shooting_ui_indicator_size"
                android:layout_height="@dimen/shooting_ui_indicator_size"
                android:layout_gravity="center"
                app:corner1="@dimen/shooting_ui_indicator_corner_size"
                app:corner2="@dimen/shooting_ui_indicator_corner_size"
                app:corner3="@dimen/shooting_ui_indicator_corner_size"
                app:corner4="@dimen/shooting_ui_indicator_corner_size">

                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/mid_range"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/shooting_ui_info_textsize" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>
        </FrameLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/shooting_ui_grid" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:layout_width="@dimen/shooting_ui_indicator_size"
                android:layout_height="@dimen/shooting_ui_indicator_size"
                android:layout_gravity="center"
                app:corner1="@dimen/shooting_ui_indicator_corner_size"
                app:corner2="@dimen/shooting_ui_indicator_corner_size"
                app:corner3="@dimen/shooting_ui_indicator_corner_size"
                app:corner4="@dimen/shooting_ui_indicator_corner_size">


                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/long_range"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/shooting_ui_info_textsize" />


            </com.landsofruin.companion.view.CornerCuttingFrameLayout>
        </FrameLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/shooting_ui_grid" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/shooting_ui_grid_translucent">


            <com.landsofruin.companion.view.CornerCuttingFrameLayout
                android:layout_width="@dimen/shooting_ui_indicator_size"
                android:layout_height="@dimen/shooting_ui_indicator_size"
                android:layout_gravity="center"
                app:corner1="4dp"
                app:corner2="4dp"
                app:corner3="4dp"
                app:corner4="4dp">


                <com.landsofruin.companion.view.MechaFontTextView
                    android:id="@+id/noise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/shooting_ui_info_textsize" />

            </com.landsofruin.companion.view.CornerCuttingFrameLayout>
        </FrameLayout>


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/targets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/shooting_ui_grid_translucent"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/shooting_ui_info_textsize" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/shooting_ui_grid_translucent"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/shooting_ui_info_textsize" />


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/ammo_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/shooting_ui_grid_translucent"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/shooting_ui_info_textsize" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="200dp"
        android:background="@color/shooting_ui_grid" />
</LinearLayout>