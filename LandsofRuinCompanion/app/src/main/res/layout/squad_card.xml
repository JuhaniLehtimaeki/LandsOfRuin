<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLevelLayout"
    android:layout_width="@dimen/friendly_card_width"
    android:layout_height="@dimen/friendly_card_height"
    android:clickable="true">


    <include layout="@layout/squad_card_front" />

    <include layout="@layout/character_card_back" />


    <FrameLayout
        android:id="@+id/in_team_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="#aa000000"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="in team"
            android:textAllCaps="true"
            android:textSize="48dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/click_stealer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/click_stealer_bg" />

</FrameLayout>
