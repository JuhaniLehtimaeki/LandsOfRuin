<com.landsofruin.companion.view.ClipedCommandPanelFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/command_panel_background"
    android:clickable="true"
    android:foreground="@drawable/command_panel_line"
    android:visibility="gone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <com.landsofruin.companion.view.MechaFontTextView
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="Game Ended, Resolve scenarios"
            android:textAllCaps="true"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/header_container"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="68dp">

                    <com.landsofruin.companion.view.MechaFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Your Scenario Objectives"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/my_objectives"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="24dp"
                        android:text="Your Team"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/my_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical" />


                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="68dp">

                    <com.landsofruin.companion.view.MechaFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Opponent's Scenario Objectives"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/opponent_objectives"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="24dp"
                        android:text="Opponent's Team"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/opponent_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>


        <com.landsofruin.companion.view.CornerCuttingFrameLayout
            android:id="@+id/ready_button"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:background="@drawable/solid_yellow_button_background"
            android:enabled="false"
            app:corner2="50dp"
            app:corner3="50dp">

            <com.landsofruin.companion.view.MechaFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:text="End the game"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />

        </com.landsofruin.companion.view.CornerCuttingFrameLayout>

    </RelativeLayout>

</com.landsofruin.companion.view.ClipedCommandPanelFrameLayout>